function show_hidden {
	defaults write com.apple.finder AppleShowAllFiles YES
}
function vimrc {
	vim ~/.vimrc
}
function sshconfig {
	vim ~/.ssh/config
}
function gp {
	git gp
}

function ca1-diskspace {
	fgrep CA1 ~/inventory | fgrep RIAK | parallel -k ssh {} 'df -h | fgrep lib/riak'
}
function ca2-diskspace {
	fgrep CA2 ~/inventory | fgrep RIAK | parallel -k ssh {} 'df -h | fgrep lib/riak'
}
function ca1-iostat {
	echo 'avg-cpu:  %user   %nice %system %iowait  %steal   %idle'
	fgrep CA1 ~/inventory | fgrep RIAK | parallel -k ssh {} 'iostat -c | tail -2' | sed '/^$/d'
}
function ca2-iostat {
	echo 'avg-cpu:  %user   %nice %system %iowait  %steal   %idle'
	fgrep CA1 ~/inventory | fgrep RIAK | parallel -k ssh {} 'iostat -c | tail -2' | sed '/^$/d'
}
